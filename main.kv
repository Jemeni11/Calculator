<SpecialButton@Button>
    background_color: 0,0,0,0.2
    background_normal: ''
    size_hint: 0.15, 0.15
    font_size: 32
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [8]

<RoundButton@Button>
    background_color: 0,0,0,0.2
    background_normal: ''
    size_hint: 0.15, 0.15
    font_size: 32
    canvas.before:
        Color:
            rgba: 0.63, 0.63, 0.63, 0.75
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [8]
<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 15

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 55
            size_hint: (1, 0.2)
            background_normal: ""

        GridLayout:
            cols: 4
            rows: 5
            spacing: 10, 10

            # Row1
            SpecialButton:
                id: percent
                size_hint: 0.15, 0.15
                font_size: 32
                text: "%"
                on_press: root.percent()

            SpecialButton:
                id: clear
                size_hint: 0.15, 0.15
                font_size: 32
                text: "C"
                on_press: root.clear()

            SpecialButton:
                id: remove
                size_hint: 0.15, 0.15
                font_size: 32
                # text: "<<"
                text: u"\u00AB"
                # or
                # text: u"\u25C0"
                on_press: root.remove()

            SpecialButton:
                id: divide
                size_hint: 0.15, 0.15
                font_size: 32
                text: "/"
                on_press: root.operands('/')

            # Row2
            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "7"
                on_press: root.button_press(7)

            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "8"
                on_press: root.button_press(8)

            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "9"
                on_press: root.button_press(9)

            SpecialButton:
                id: multiply
                size_hint: 0.15, 0.15
                font_size: 32
                text: "*"
                on_press: root.operands('*')

            # Row3
            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "4"
                on_press: root.button_press(4)

            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "5"
                on_press: root.button_press(5)

            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "6"
                on_press: root.button_press(6)

            SpecialButton:
                id: subtract
                size_hint: 0.15, 0.15
                font_size: 32
                text: "-"
                on_press: root.operands('-')

            # Row4
            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "1"
                on_press: root.button_press(1)

            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "2"
                on_press: root.button_press(2)

            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "3"
                on_press: root.button_press(3)

            SpecialButton:
                id: add
                size_hint: 0.15, 0.15
                font_size: 32
                text: "+"
                on_press: root.operands('+')

            # Row5
            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                # text: "+/-"
                text: u"\u00B1"
                on_press: root.toggle()

            RoundButton:
                size_hint: 0.15, 0.15
                font_size: 32
                text: "0"
                on_press: root.button_press(0)

            RoundButton:
                text: "."
                on_press: root.dot()

            SpecialButton:
                id: equal
                size_hint: 0.15, 0.15
                font_size: 32
                text: "="
                on_press: root.equal()